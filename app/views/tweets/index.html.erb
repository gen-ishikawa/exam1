<div class="container-fluid">
  <div class="row">
    <div class="wrapper col-md-4 col-md-offset-2 col-sm-12">
      <p><%= notice %></p>
      <h1>つぶやき一覧</h1>
      <%= link_to "つぶやく", new_tweet_path, class: 'btn btn-default' %>
    </div>
    <div class="wrapper col-md-6 col-sm-12">
      <% @tweets.each do |tweet| %>
        <p><%= tweet.content %></p>
        <%= link_to "編集", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>

